    provider             = "prisma-client-py"
    interface            = "asyncio"
    recursive_type_depth = 5
}

model FoodItems {
    id          Int      @id @default(autoincrement())
    name        String
    price       Float
    image       String
    description String?
    Orders      Orders[]

    @@map("food_items")
}

model Orders {
    id           Int         @id @default(autoincrement())
    order_id     String      @unique
    food_item_id Int?
    quantity     Int
    total_price  Float
    status       OrderStatus @default(PENDING)
    created_at   DateTime    @default(now())

    food_item FoodItems? @relation(fields: [food_item_id], references: [id])

    @@map("orders")
}

enum OrderStatus {
    PENDING
    COMPLETED
    CANCELLED
}
